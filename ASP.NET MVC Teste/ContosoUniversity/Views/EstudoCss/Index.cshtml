    <style>
        body {
            width: 2000px;
            height: 2000px;
        }

        #saudacao {
            width: 200px;
            height: 200px;
            background-color: yellow;
        }
        #novo {
            width: 500px;
            height: 500px;
            background-color: blue;
            border: 5px solid red;
        }
    </style>
